    </HediffDef>

    <HediffDef ParentName="OKA_UpgradeDriveHediffBase">
        <defName>OKA_AnimalUpgradeDriveHediff</defName>
        <label>upgrade drive (animals)</label>
        <description>An installed upgrade drive.</description>
        <spawnThingOnRemoved>OKA_AnimalUpgradeDrive</spawnThingOnRemoved>
        <stages>
            <li>
                <statOffsets>
                    <AnimalGatherSpeed>0.10</AnimalGatherSpeed>
                    <AnimalGatherYield>0.10</AnimalGatherYield>
                    <TrainAnimalChance>0.10</TrainAnimalChance>
                    <TameAnimalChance>0.10</TameAnimalChance>
                    <HuntingStealth>0.10</HuntingStealth>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

